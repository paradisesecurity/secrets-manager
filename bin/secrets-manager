#!/usr/bin/env php
<?php

$autoload = [
    \dirname(__DIR__, 3).'/autoload.php',
    \dirname(__DIR__, 2).'/vendor/autoload.php',
    \dirname(__DIR__, 1).'/vendor/autoload.php',
];

$root = [
    \dirname(__DIR__, 4),
    \dirname(__DIR__, 2),
    \dirname(__DIR__, 1),
];

foreach ($autoload as $index => $file) {
    if (\file_exists($file)) {
        require_once $file;
        if (!\defined('SECRETS_MANAGER_ROOT')) {
            define('SECRETS_MANAGER_ROOT', $root[$index]);
        }
        break;
    }
}

use ParadiseSecurity\Component\SecretsManager\Console\Command\SetupCommand;
use ParadiseSecurity\Component\SecretsManager\Console\Command\InstallCommand;
use ParadiseSecurity\Component\SecretsManager\Console\Command\KeyRotationCommand;
use Symfony\Component\Console\Application;

$application = new Application('Secrets Manager', '1.0.0');

// Add commands
$application->addCommand(new InstallCommand());
$application->addCommand(new SetupCommand());

// TODO: Add dependency injection for KeyRotationCommand
// $application->add(new KeyRotationCommand());

$application->run();
